<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="150dp"
        android:layout_height="39dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weight"
        android:hint="WEIGHT (kg)"
        android:layout_alignBaseline="@+id/height"
        android:layout_alignBottom="@+id/height"
        android:layout_alignEnd="@+id/passwordc" />

    <EditText
        android:layout_height="39dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/gender"
        android:hint="GENDER (M/F)"
        android:layout_width="150dp"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_alignEnd="@+id/name" />

    <EditText
        android:layout_width="162dp"
        android:layout_height="39dp"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:id="@+id/age"
        android:hint="AGE (Years)" />

    <Button
        android:text="HOME"
        android:layout_width="150dp"
        android:id="@+id/homeb"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name"
        android:background="@android:color/holo_blue_light"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_height="39dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/name"
        android:layout_width="330dp"
        android:hint="NAME"
        android:layout_below="@+id/signinb"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_"
        android:layout_width="330dp"
        android:hint="EMAIL"
        android:layout_height="39dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/gender"
        android:layout_alignStart="@+id/age" />

    <EditText
        android:layout_width="330dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_height="39dp"
        android:hint="PASSWORD"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/email_"
        android:layout_alignStart="@+id/email_" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordc"
        android:hint="CONFIRM PASSWORD"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="39dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/height"
        android:hint="HEIGHT (cm)"
        android:layout_above="@+id/signin2"
        android:layout_alignStart="@+id/passwordc"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="CALCULATE H20"
        android:layout_height="wrap_content"
        android:id="@+id/signinb"
        android:layout_width="150dp"
        android:layout_alignBaseline="@+id/homeb"
        android:layout_alignBottom="@+id/homeb"
        android:layout_alignEnd="@+id/name"
        android:onClick="onClick"
        android:background="@android:color/holo_blue_light"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/signin2"
        android:layout_height="80dp"
        android:text="\nNOTE:\n\t ENTER ALL ELSE APP WILL STOP"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="240dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="normal|bold"
        android:textAlignment="center" />


</RelativeLayout>
