<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.n1.healthtracker.MainActivity">

    <Button
        android:text="SIGN IN"
        android:layout_height="wrap_content"
        android:id="@+id/Bsignin"
        android:onClick="onClick"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignBaseline="@+id/Blogin"
        android:layout_alignBottom="@+id/Blogin"
        android:layout_alignParentEnd="true"
        android:layout_width="156.3dp" />

    <ImageView
        android:layout_height="1000dp"
        android:id="@+id/img"
        android:src="@drawable/oho"
        android:background="@drawable/oho"
        android:elevation="0dp"
        android:layout_alignParentEnd="true"
        android:layout_width="500dp" />

    <Button
        android:text="LOG IN"
        android:layout_height="wrap_content"
        android:id="@+id/Blogin"
        android:onClick="onClick"
        android:background="@android:color/holo_blue_dark"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_width="156.3dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:textColor="@color/button_material_light"
        android:layout_alignBottom="@+id/Bsignin"
        android:layout_centerHorizontal="true"
        android:layout_height="69dp" />
</RelativeLayout>
