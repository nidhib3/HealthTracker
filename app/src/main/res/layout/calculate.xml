<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="90dp"
            android:id="@+id/amtAct"
            android:hint="TIME OF EXCERCISE"
            android:textStyle="normal|bold" />

        <Button
            android:text="H20 REMINDER"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:id="@+id/h20Reminder"
            android:layout_width="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp"
            android:onClick="onClick"
            android:padding="3dp"
            android:background="@android:color/holo_blue_light"
            android:textStyle="normal|bold" />

        <Button
            android:text="SUBMIT EXCERCISE TIME"
            android:layout_height="wrap_content"
            android:id="@+id/excTime"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/amtAct"
            android:layout_centerHorizontal="true"
            android:layout_width="210dp"
            android:background="@android:color/holo_blue_light"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/showcount"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/excTime"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp"
            android:textStyle="normal|bold|italic"
            android:textAlignment="center" />

        <TextView
            android:text="mins"
            android:layout_width="100dp"
            android:id="@+id/mins"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="50dp"
            android:layout_marginEnd="23dp"
            android:layout_alignBaseline="@+id/amtAct"
            android:layout_alignBottom="@+id/amtAct"
            android:layout_alignEnd="@+id/h20Tracker"
            android:textStyle="normal|bold" />

        <Button
            android:text="H20 TRACKER"
            android:layout_height="wrap_content"
            android:id="@+id/h20Tracker"
            android:layout_width="150dp"
            android:padding="3dp"
            android:background="@android:color/holo_blue_light"
            android:textStyle="normal|bold"
            android:layout_alignBaseline="@+id/h20Reminder"
            android:layout_alignBottom="@+id/h20Reminder"
            android:layout_toEndOf="@+id/h20Reminder"
            android:layout_marginStart="24dp" />

        <TextView
            android:text="ENTER THE AMOUNT OF MINS OF EXCERCISE"
            android:id="@+id/amtact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="17dp"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
