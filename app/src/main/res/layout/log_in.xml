<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="43dp"
        android:id="@+id/password_"
        android:hint="Password"
        android:layout_below="@+id/email_"
        android:layout_alignStart="@+id/email_" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_"
        android:hint="E-Mail"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/loginb"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="HOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bhome"
        android:layout_alignBaseline="@+id/loginb"
        android:layout_alignBottom="@+id/loginb"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:background="@android:color/holo_blue_light"
        android:textStyle="normal|bold" />

    <Button
        android:text="TRACK H20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/loginb"
        android:layout_marginEnd="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_blue_light"
        android:textStyle="normal|bold" />

    <TextView
        android:text="\nNOTE\n\t SIGNIN BEFOR LOGINING IN(APP WILL STOP)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        android:id="@+id/lognote"
        android:textAlignment="viewStart"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="normal|bold" />

</RelativeLayout>
